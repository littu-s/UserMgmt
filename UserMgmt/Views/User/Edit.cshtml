                @Html.ValidationMessageFor(model => model.ModifyDate, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back", "Index", "User", null, new { @class = "btn btn-warning btn-md", style = "margin-left: 20px;" })
                <input type="submit" value="Save" class="btn btn-success btn-md" style="margin-left: 20px;" />
            </div>
        </div>
    </div>
}


